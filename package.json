{
    "name": "pydantic-to-typescript-action",
    "version": "3.0.1",
    "description": "GitHub Action to convert Python Pydantic models to TypeScript using LLMs",
    "main": "dist/index.js",
    "scripts": {
        "build": "ncc build src/index.ts -o dist --source-map && mkdir -p dist/prompts && cp prompts/*.txt dist/prompts/",
        "test": "jest",
        "lint": "eslint 'src/**/*.ts'",
        "format": "prettier --write 'src/**/*.ts'",
        "prepare": "husky install"
    },
    "keywords": [
        "github",
        "actions",
        "pydantic",
        "typescript",
        "langchain",
        "llm"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "@actions/core": "^1.11.1",
        "@actions/github": "^6.0.1",
        "@langchain/anthropic": "^0.3.20",
        "@langchain/core": "^0.3.56",
        "@langchain/openai": "^0.5.10",
        "diff": "^7.0.0",
        "langchain": "^0.3.26",
        "langsmith": "^0.3.29",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.27.0",
        "@types/diff": "^7.0.2",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.15.18",
        "@typescript-eslint/eslint-plugin": "^8.29.0",
        "@typescript-eslint/parser": "^8.29.0",
        "@vercel/ncc": "^0.38.3",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.0",
        "globals": "^16.1.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.5.2",
        "prettier": "^3.5.3",
        "ts-jest": "^29.3.4",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.32.1"
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    }
}
