{
    "name": "pydantic-to-typescript-action",
    "version": "1.0.0",
    "description": "GitHub Action to convert Python Pydantic models to TypeScript using LLMs",
    "main": "dist/index.js",
    "scripts": {
        "build": "ncc build src/index.ts -o dist --source-map",
        "test": "jest",
        "lint": "eslint 'src/**/*.ts'",
        "format": "prettier --write 'src/**/*.ts'",
        "prepare": "husky install"
    },
    "keywords": [
        "github",
        "actions",
        "pydantic",
        "typescript",
        "langchain",
        "llm"
    ],
    "author": "Your Name",
    "license": "MIT",
    "dependencies": {
        "@actions/core": "^1.11.1",
        "@actions/github": "^6.0.0",
        "@langchain/anthropic": "^0.3.16",
        "@langchain/core": "^0.3.43",
        "@langchain/openai": "^0.5.4",
        "diff": "^7.0.0",
        "langchain": "^0.3.20"
    },
    "devDependencies": {
        "@types/diff": "^7.0.2",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.14.0",
        "@typescript-eslint/eslint-plugin": "^8.29.0",
        "@typescript-eslint/parser": "^8.29.0",
        "@vercel/ncc": "^0.38.3",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-prettier": "^5.2.6",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.5.0",
        "prettier": "^3.5.3",
        "ts-jest": "^29.3.1",
        "typescript": "^5.8.3"
    },
    "lint-staged": {
        "*.ts": [
            "eslint --fix",
            "prettier --write"
        ]
    }
}
